<openerp>
<data>

<record id="view_mass_report_attachment_form" model="ir.ui.view">
    <field name="name">mass.report.attachment.form</field>
    <field name="model">mass.report.attachment</field>
    <field name="arch" type="xml">
        <form string="Mass Report Attachment">
            <sheet>
                <group name="general" string="Mass Report Attachment">
                    <field name="record_id"/>
                    <field name="report_id"/>
                    <field name="attachment_id"/>
                </group>
                <group name="connector" string="Job">

                    <field name="queue_job_id" groups="base.group_erp_manager"/>
                    <field name="queue_job_state"/>
                    <field name="queue_job_exc_info" groups="base.group_erp_manager"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="view_mass_report_attachment_tree" model="ir.ui.view">
    <field name="name">mass.report.attachment.tree</field>
    <field name="model">mass.report.attachment</field>
    <field name="arch" type="xml">
        <tree string="Mass Report Attachments"
            create="false" colors="red: queue_job_state=='failed'">
            <field name="create_date"/>
            <field name="record_id"/>
            <field name="report_id"/>
            <field name="attachment_id"/>
            <field name="queue_job_id" groups="base.group_erp_manager"/>
            <field name="queue_job_state"/>
        </tree>
    </field>
</record>

</data>
</openerp>
