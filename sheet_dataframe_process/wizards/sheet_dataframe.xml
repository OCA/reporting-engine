<odoo>
    <record id="sheet_dataframe_transient_form" model="ir.ui.view">
        <field name="model">sheet.dataframe.transient</field>
        <field name="arch" type="xml">
            <form>
                <group col="2">
                    <group>
                        <field name="config_id" readonly="config_id" />
                        <field
                            name="file"
                            widget="binary"
                            filename="filename"
                            readonly="file"
                        />
                    </group>
                    <group>
                        <field name="partner_id" readonly="partner_id" />
                        <field name="filename" invisible="1" />
                    </group>
                </group>
                <group colspan="1">
                    <field name="missing_cols" nolabel="1" />
                    <field name="sample" nolabel="1" />
                    <separator invisible="not comment" />
                    <field
                        name="comment"
                        nolabel="1"
                        readonly="1"
                        invisible="not comment"
                    />
                </group>
                <footer>
                    <button
                        name="process"
                        string="Process"
                        invisible="not config_id"
                        type="object"
                        class="btn-primary"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="sheet_dataframe_transient_action" model="ir.actions.act_window">
        <field name="name">Process Spreadsheet</field>
        <field name="res_model">sheet.dataframe.transient</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
