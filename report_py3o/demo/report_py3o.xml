<odoo>

    <record model="py3o.template" id="res_user_report">
        <field name="name">res_user.odt</field>
        <field name="filetype">odt</field>
    </record>

    <function model="py3o.template" name="fill_model"
              eval="[{'record': 'report_py3o.res_user_report', 'path':'/../demo/res_user.odt'}]"/>

    <record id="res_users_report_py3o" model="ir.actions.report">
        <field name="name">Py3o Demo User</field>
        <field name="model">res.users</field>
        <field name="report_name">py3o_user_info</field>
        <field name="report_type">py3o</field>
        <field name="py3o_filetype">odt</field>
        <field name="py3o_template_id" ref="report_py3o.res_user_report"/>
        <field name="py3o_template_fallback" ref="report_py3o.res_user_report"/>
        <field name="attachment">object.name + ('.pdf')</field>
        <field name="module">report_py3o</field>
    </record>

</odoo>
