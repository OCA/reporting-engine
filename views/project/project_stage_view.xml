<?xml version="1.0"?>
<odoo>

    <record id="project_stage_tree" model="ir.ui.view">
        <field name="name">project.stage.tree</field>
        <field name="model">project.stage</field>
        <field name="arch" type="xml">
            <tree string="Project Stages">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="first_stage"/>
                <field name="last_stage"/>
                <field name="allow_cancel"/>
                <field name="cancel_stage"/>
            </tree>
        </field>
    </record>

    <record id="project_stage_form" model="ir.ui.view">
        <field name="name">project.stage.form</field>
        <field name="model">project.stage</field>
        <field name="arch" type="xml">
            <form string="Project Stage">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g. Quotation, Design, ..."/>
                        </h1>
                    </div>
                    <group col="4">
                        <field name="case_default"/>
                        <field name="sequence"/>
                        <field name="department_id"/>
                        <field name="lead_time"/>
                    </group>
                    <group>
                        <field name="fold"/>
                    </group>
                    <group string="Positions" col="6">
                        <field name="first_stage"/>
                        <field name="last_stage"/>
                        <field name="cancel_stage"/>
                    </group>
                    <group string="Rule" col="6">
                        <field name="allow_modified"/>
                        <field name="allow_cancel"/>
                        <field name="allow_deleted"/>
                    </group>
                    <group string="Technical Area" col="4">
                        <field name="execute_function"/>
                        <field name="validate_function"/>
                    </group>
                    <group string="Project Groups">
                        <field name="project_group_ids" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="project_stage_action" model="ir.actions.act_window">
        <field name="name">Project Stages</field>
        <field name="res_model">project.stage</field>
        <field name="view_type">form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to setup a new stage in the processing of the projects.
            </p><p>
            You can create Project Stages to categorize the status of every
            project entered in the system. The stages define all the steps
            required for the resolution of a project.
        </p>
        </field>
    </record>

</odoo>
