<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <!-- <field name="groups_id" eval="[(4, ref('product.group_stock_packaging'))]"/> -->
        <field name="arch" type="xml">
            <button name="print_quotation" class="o_sale_print" position="after">
                <button name="export_quotation_xls" string="Print Excel" type="object" class="o_sale_print"/>
            </button>
            <xpath expr="//field[@name='order_line']//tree//field[@name='name']" position="after">
                <field name="d_length" force_save = "1"/>
                <field name='d_width'/>
                <field name='d_hight'/>
            </xpath>
        </field>
    </record>
</odoo>