<odoo>
    <record id="df_source_list" model="ir.ui.view">
        <field name="model">df.source</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field
                    name="dataframe_id"
                    context="{'default_dataframe_id': parent}"
                    optional="hide"
                />
                <button
                    name="start"
                    class="fa fa-play"
                    type="object"
                    title="Start process"
                />
                <field name="template" filename="name" widget="binary" />
                <field name="name" />
                <field name="rename" />
            </list>
        </field>
    </record>

    <record id="df_source_action" model="ir.actions.act_window">
        <field name="name">Files to test with polars</field>
        <field name="res_model">df.source</field>
        <field name="view_mode">list</field>
        <field name="path">df-source</field>
    </record>
</odoo>
