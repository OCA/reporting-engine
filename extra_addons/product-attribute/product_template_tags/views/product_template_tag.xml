<odoo>
    <record id="product_template_tag_form_view" model="ir.ui.view">
        <field name="name">product.template.tag.form (in product_template_tags)</field>
        <field name="model">product.template.tag</field>
        <field name="arch" type="xml">
            <form>
                <header/>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(product.product_template_action)d"
                                type="action"
                                class="oe_stat_button"
                                icon="fa-archive"
                                context="{'search_default_tag_ids': active_id}">
                            <field name="products_count" widget="statinfo"/>
                        </button>
                    </div>

                    <group>
                        <field name="name"/>
                        <field name="company_id"
                               option="{no_create_edit: True}"
                               groups="base.group_multi_company"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_template_tag_search_view" model="ir.ui.view">
        <field name="name">product.template.tag.search (in product_template_tags)</field>
        <field name="model">product.template.tag</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="company_id"/>
                <group expand="0">
                    <filter name="group_by_company" string="Company"
                            domain="[]" context="{'group_by': 'company_id'}"
                            groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <record id="product_template_tag_tree_view" model="ir.ui.view">
        <field name="name">product.template.tag.tree (in product_template_tags)</field>
        <field name="model">product.template.tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company_id"
                       widget="selection"
                       groups="base.group_multi_company"/>
                <field name="products_count"/>
            </tree>
        </field>
    </record>

    <record id="product_template_tag_act_window" model="ir.actions.act_window">
        <field name="name">Product Template Tag</field>
        <field name="res_model">product.template.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="view_type">form</field>
    </record>

    <record id="product_template_tag_config_menu" model="ir.ui.menu">
        <field name="name">Product Tags</field>
        <field name="parent_id" ref="base.menu_ir_property"/>
        <field name="sequence" eval="40"/>
        <field name="action" ref="product_template_tag_act_window"/>
    </record>
</odoo>
