<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_qweb_field_converter_tree" model="ir.ui.view">
        <field name="name">qweb.field.converter.tree</field>
        <field name="model">qweb.field.converter</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree create="1" editable="bottom">
                <field name="res_model_id" />
                <field
                    name="field_id"
                    attrs="{'readonly':[('res_model_id','=',False)]}"
                />
                <field name="field_type" invisible="1" />
                <field
                    name="uom_id"
                    attrs="{'readonly':['|', ('currency_id','!=',False), ('field_type','!=', 'float')]}"
                />
                <field
                    name="uom_field_id"
                    attrs="{'readonly':[('uom_id','=',False)],'required':[('uom_id','!=',False)]}"
                />
                <field
                    name="currency_id"
                    attrs="{'readonly':['|', ('uom_id','!=',False), ('field_type','!=', 'float')]}"
                />
                <field
                    name="currency_field_id"
                    attrs="{'readonly':[('currency_id','=',False)],'required':[('currency_id','!=',False)]}"
                />
                <field name="field_options" />
                <field
                    name="company_id"
                    groups="base.group_multi_company"
                    optional="show"
                />
                <field
                    name="digits"
                    attrs="{'required':[('field_type','=', 'float')], 'readonly':[('field_type','!=', 'float')]}"
                />
            </tree>
        </field>
    </record>
    <record id="view_qweb_field_converter_searh" model="ir.ui.view">
        <field name="name">qweb.field.converter.search</field>
        <field name="model">qweb.field.converter</field>
        <field name="arch" type="xml">
            <search string="Qweb Field Converter Search">
                <field name="res_model_id" />
                <field name="field_id" />
                <field name="uom_id" />
                <field name="currency_id" />
                <field name="company_id" />
                <separator />
                <group expand="1" string="Group By">
                    <filter
                        string="Model"
                        name="res_model_id"
                        context="{'group_by': 'res_model_id'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="action_qweb_field_converter_view" model="ir.actions.act_window">
        <field name="name">Qweb Field Converter</field>
        <field name="res_model">qweb.field.converter</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_qweb_field_converter_tree" />
    </record>
    <menuitem
        id="menu_qweb_field_converter"
        parent="base.reporting_menuitem"
        action="action_qweb_field_converter_view"
        sequence="10"
    />
</odoo>
