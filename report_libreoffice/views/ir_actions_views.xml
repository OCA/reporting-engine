<?xml version="1.0" encoding="utf-8" ?>
<odoo>

<record id="act_report_libreoffice_view" model="ir.ui.view">
    <field name="model">ir.actions.report</field>
    <field name="inherit_id" ref="base.act_report_xml_view" />
    <field name="arch" type="xml">
        <field name="report_type" position="after">
            <field
                    name="output_type"
                    attrs="{'required': [('report_type', '=', 'libreoffice')], 'invisible': [('report_type', '!=', 'libreoffice')]}"
                />
        </field>
        <field name="print_report_name" position="after">
            <field
                    name="doc_template"
                    attrs="{'invisible': [('report_type', '!=', 'libreoffice')]}"
                />
        </field>
    </field>
</record>

</odoo>
